require 'yaml'
require 'erb'
require 'tiny_tds'
require 'fileutils'

y = YAML.load_file("conn_info.yml")

tmshost = "172.18.60.89"
tmsuser = "tmscob"
tmspw = y["tms_dev"]
tmsdb = "lidoTMS"
tmsclient = TinyTds::Client.new(:username => tmsuser,
:password => tmspw,:host => tmshost,:database => tmsdb)

#puts "ACTIVE: #{tmsclient.active?}"
